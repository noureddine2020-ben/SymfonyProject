{% extends 'base.html.twig' %}

{% block title 'Gérer les options' %}

{% block body %}

    <br class="container mt-4">
        <h1><i class="fa fa-user-circle"></i> Gérer les options</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
          <table class="table table-striped">
           <thead>
           <tr>
               <th>Name</th>
               <th>Action</th>
           </tr>
           </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.name }}</td>
                <td>
                    <a href="{{ path('admin.option.edit',{id:option.id}) }}" class="btn btn-secondary"><i class='fa fa-edit'></i> Editer</a>
                </td>
                <td>
                    <form method="post" action="{{ path('admin.option.delete', {id:option.id}) }}"  style="display: inline-block"
                          onsubmit="return confirm('Voulez vous vraiment supprimer cette option ?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <BUTTON class="btn btn-danger"><i class='fa fa-cut'></i> Supprimer une option</BUTTON>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
          </table>
    </br>
        <div class="text-right">
            <a href="{{ path('admin.option.new') }}" class="btn btn-primary"><i class='fa fa-cart-plus'></i> Ajouter une option</a>
        </div>




{% endblock %}



