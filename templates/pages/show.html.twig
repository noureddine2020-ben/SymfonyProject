
{% extends 'base.html.twig' %}
{% block title property.title %}
{% block body %}
    <div class="jumbotron">
        <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card md-4">
                    {% if property.filename %}
                        <img src="/images/properties/{{ property.filename }}" alt="card-img-top" style="width: 70%;height: 80%;">
                    {% endif %}
        </div>
            <div class="col-md-4"></div>

            <h2>{{ property.name }}</h2>
            <div class="text-primary" style="font-size:3rem ;font-weight: bolder;">{{ property.formattedPrice() }} DT</div>
            <a href="#" class="btn btn-danger">Contacter nous</a>

        </div>

    </div>
       </div>
           </div>

     <div class="container mt-4">
    <p>
        {{ property.description | nl2br }}
    </p>
         <div class="row">
             <div class="col-md-8">
                 <h2>Caratéristiques</h2>
                 <table class="table table-striped">
                     <tr>
                         <td>Marque</td>
                         <td>{{ property.marque }}</td>
                     </tr>
                     <tr>
                         <td>Puissance</td>
                         <td>{{ property.puissance }}</td>
                     </tr>
                     <tr>
                         <td> Kilométrage</td>
                         <td> {{ property.compteur }}</td>
                     </tr>
                     <tr>
                         <td>Tranmission</td>
                         <td>{{ property.tranmission }}</td>
                     </tr>

                 </table>

             </div>
             
             <div class="col-md-4">
                 <h2>Plus de détails</h2>
                  <ul class="list-group">
                 {% for option in property.options %}
                 <li class="list-group-items">{{ option.name }}</li>
                 {% endfor %}
                  </ul>
             </div>

         </div>
     </div>
{% endblock %}

